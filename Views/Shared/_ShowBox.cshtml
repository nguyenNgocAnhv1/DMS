@model List<App.Models.Box>
<table class="table">
     <thead>
          <tr>
               <th>

                    tittle
               </th>

               <th>

                    pass
               </th>
               <th>
                    ShareCode
               </th>
               <th>
                    url
               </th>
               <th>
                    IsPublic
               </th>
               <th>
                    Account
               </th>
               <th></th>
          </tr>
     </thead>
     <tbody>
          @foreach (var item in Model)
          {
               <tr>
                    <td>
                         @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    @* <td style="max-height: 200px; max-width: 200px;">
                         @Html.Raw(item.Content)
                         </td> *@
                    <td>
                         @Html.DisplayFor(modelItem => item.Pass)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.ShareCode)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.IsPublic)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Account.username)
                    </td>
                    <td>
                         <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                         <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                         <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
               </tr>
          }
     </tbody>
</table>